{{#d-modal-body title="flagging.title"}}
  <div class="chat-flag-inputs">
    {{#each types as |type|}}
      <label class="radio">
        <input
          id="radio-{{type.id}}"
          checked={{eq selectedType.id type.id}}
          onclick={{action "changeType" type}}
          type="radio"
          name="chat_flag_index"
          value={{type.id}}
        >
        <span>{{i18n (concat "flagging.formatted_name." type.name_key)}}</span>
      </label>
    {{/each}}
  </div>

{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    class="btn-primary create"
    action=(action "createFlag")
    icon="flag"
    label="chat.flagging.flag_message"
    disabled=buttonDisabled
  }}
</div>
