<div class="chat-msgactions-backdrop">
  <div class="chat-msgactions">
    <div class="selected-message">
      {{chat-user-avatar user=message.user}}
      <span class="selected-message-reply">{{replace-emoji message.excerpt}}</span>
    </div>

    <ul class="secondary-actions">
      {{#each secondaryButtons as |button|}}
        <li class="chat-message-action-item" data-id={{button.id}}>
          {{d-button
            class="chat-message-action catch-click"
            translatedLabel=button.name
            icon=button.icon
            action=(action (get messageActions button.id))
          }}
        </li>
      {{/each}}
    </ul>

    {{#if (or messageCapabilities.canReact messageCapabilities.canReply)}}
      <div class="main-actions">
        {{#if messageCapabilities.canReact}}
          {{#each emojiReactions as |reaction|}}
            {{chat-message-reaction
              emoji=reaction.emoji
              reacted=reaction.reacted
              react=messageActions.react
              class="show"
            }}
          {{/each}}

          {{d-button
            class="btn-flat react-btn catch-click"
            action=messageActions.startReactionForMsgActions
            icon="discourse-emojis"
            title="chat.react"
          }}
        {{/if}}

        {{#if messageCapabilities.canReply}}
          {{d-button
            class="chat-message-action reply-btn btn-primary catch-click"
            action=messageActions.reply
            icon="reply"
            title="chat.reply"
          }}
        {{/if}}
      </div>
    {{/if}}
  </div>
</div>
