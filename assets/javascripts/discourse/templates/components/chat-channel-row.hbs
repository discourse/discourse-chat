<div class={{if nested "chat-channel-row nested" "chat-channel-row"}}>
  {{#if (and unreadCount isDirectMessageRow)}}
    <div class="unread-dm-indicator">
      <div class="unread-dm-indicator-number-wrap">
        <div class="unread-dm-indicator-number">
          {{unreadCount}}
        </div>
      </div>
    </div>
  {{else if unreadCount}}
    <span class="unread-chat-messages-indicator"></span>
  {{/if}}
  {{chat-channel-title channel=channel}}
  {{#if unreadCount}}
    <span class="chat-channel-row-unread-count">
      {{i18n "chat.unread_count" count=unreadCount}}
    </span>
  {{/if}}
</div>

{{#each channel.chat_channels as |nested_channel|}}
  {{chat-channel-row channel=nested_channel switchChannel=switchChannel nested=true}}
{{/each}}
