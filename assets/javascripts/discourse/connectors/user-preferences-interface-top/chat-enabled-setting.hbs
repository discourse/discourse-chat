{{#if model.can_chat}}
  <fieldset class="control-group other">
    <legend class="control-label">{{i18n "chat.isolate"}}</legend>
    {{preference-checkbox labelKey="chat.enable" checked=model.user_option.chat_isolated}}
  </fieldset>

  <fieldset class="control-group other">
    <legend class="control-label">{{i18n "chat.title_capitalized"}}</legend>
    {{preference-checkbox labelKey="chat.enable" checked=model.user_option.chat_enabled}}
  </fieldset>
{{/if}}
