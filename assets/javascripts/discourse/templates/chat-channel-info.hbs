{{compute-full-page-height selector=".channel-info"}}

<div class="channel-info">
  <LinkTo @route="chat.browse" class="channel-info__back-btn">
    {{d-icon "chevron-left"}}
    <span>
      {{i18n "chat.channel_info.back_to_all_channels"}}
    </span>
  </LinkTo>

  <div class="channel-info-header">
    <h2 class="channel-info-header__title">
      {{replace-emoji model.chatChannel.title}}
    </h2>
    <div class="channel-info-header__actions">
      {{d-button
        class="btn-flat"
        icon="times"
        action=(action "onBackToChannel")
      }}
    </div>
  </div>

  <div class="chat-tabs chat-info-tabs">
    <ul class="chat-tabs-list" role="tablist">
      {{#each tabs as |tab|}}
        <li
          class="chat-tabs-list__item"
          role="tab"
          aria-controls={{concat tab "-tab"}}
        >
          <LinkTo
            @route={{concat "chat.channel.info." tab}}
            @models={{array
              model.chatChannel.id
              (slugify-channel model.chatChannel.title)
            }}
            class="chat-tabs-list__link"
          >
            {{i18n (concat "chat.channel_info.tabs." tab)}}
          </LinkTo>
        </li>
      {{/each}}
    </ul>

    <div
      id={{tab}}
      class="chat-tabs__tabpanel"
      aria-hidden={{notEq tab activeTab}}
      role="tabpanel"
      aria-labelledby={{concat tab "-tab"}}
    >
      {{outlet}}
    </div>
  </div>
</div>
