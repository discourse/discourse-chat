{{#d-modal-body title="chat.settings.title"}}
  <div class="chat-settings-modal">
    {{#conditional-loading-spinner condition=loadingChannels}}
      {{#each channels as |channel|}}
        {{chat-channel-settings-row
          channel=channel
          closeModal=(action "closeModal")
          onFollowChannel=(action "onFollowChannel")
        }}
      {{/each}}
    {{/conditional-loading-spinner}}
  </div>
{{/d-modal-body}}
